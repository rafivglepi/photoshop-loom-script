{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "strict": true,
    "noLib": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["types-for-adobe/Photoshop/2015.5"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
